{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:event:default",
    "core:webview:default",
    "dialog:default",
    "notification:default",
    "shell:allow-open",
    "updater:default",
    "process:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "cmd": "binaries/ffmpeg",
          "args": true
        }
      ]
    }
  ]
}